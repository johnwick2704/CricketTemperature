<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D7CCC8"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        app:srcCompat="@drawable/thermometer1"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="-1dp" />

    <TextView
        android:id="@+id/t1"
        android:layout_width="411dp"
        android:layout_height="100dp"
        android:layout_gravity="clip_horizontal|center"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginRight="10sp"
        android:gravity="center_horizontal"
        android:text="Did you know that you can determine the temperature outside by counting the number of chirps the cricket makes? Just count the number of chirps it makes in 25 seconds and place that number in the space below:"
        android:textSize="16sp"
        android:textStyle="bold|italic" />

    <EditText
        android:id="@+id/e1"
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="10sp"
        android:layout_marginRight="20sp"
        android:background="#BDBDBD"
        android:ems="10"
        android:gravity="center_horizontal"
        android:inputType="number"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/b1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="10sp"
        android:layout_marginRight="20sp"
        android:background="#795548"
        android:text="Calculate Temperature" />

    <TextView
        android:id="@+id/t2"
        android:layout_width="375dp"
        android:layout_height="38dp"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="50sp"
        android:layout_marginRight="20sp"
        android:gravity="clip_horizontal|center_horizontal"
        android:text="TextView"
        android:textSize="18sp" />

</LinearLayout>